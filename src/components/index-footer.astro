---
import CafeVienneSvg from "../assets/icons/cafe-vienne.svg?raw";
import CommonSvg from "./common/common-svg.astro";
import TablesForegroundImage from "../assets/images/tables-foreground.jpg";
import { Image } from "astro:assets";
---

<footer class="w-full bg-dark relative overflow-hidden">
  <Image
    src={TablesForegroundImage}
    widths={[240, 540, 720, TablesForegroundImage.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${TablesForegroundImage.width}px`}
    alt="Tables du café vienne en avant plan avec terrasse en arrière plan"
    class="absolute w-full brightness-[25%]"
  />
  <div
    class="relative max-w-screen-xl w-full flex flex-row p-16 m-auto justify-center items-center"
  >
    <div class="p-2">
      <img
        src="https://maps.googleapis.com/maps/api/staticmap?center=42.698204,2.892412&zoom=18&size=300x300&key=AIzaSyA9EszeYu_WTGWZOhvy0xnV7p3pBpOrBJU&markers=color:red%7Clabel:S%7C48.8587,2.293710"
        alt="Effiel Tower"
      />
    </div>
    <div class="p-4 h-auto flex flex-col gap-2 w-2/5">
      <div class="text-4xl font-artdeco">Café Vienne</div>
      <div class="mb-4 flex flex-col">
        <span>2 place Arago</span>
        <span>66 000 Perpignan</span>
      </div>
      <div>
        <a href="tel:0626356980" class="hover:text-primary">+33 6 26 35 69 80</a
        >
      </div>
      <a href="tel:0626356980" class="hover:text-primary">+33 6 26 35 69 80</a>
      <div>
        <a href="mailto:cafevienne@orange.fr" class="hover:text-primary"
          >cafevienne@orange.fr</a
        >
      </div>
    </div>
    <div class="p-4">
      <h3 class="text-2xl font-bodoni">
        Ouvert tous les jours de midi à tard le soir
      </h3>
    </div>
    <div class="p-2">
      <CommonSvg
        class="w-[12rem] h-[12rem] aspect-square drop-shadow-md"
        raw={CafeVienneSvg}
      />
    </div>
  </div>
</footer>
